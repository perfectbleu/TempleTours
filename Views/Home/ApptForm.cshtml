@{
    ViewData["Title"] = "Appointment Form";
}

@model ApptModel

<h2>Sign Up:</h2>

<form method="post" asp-action="ApptForm">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>Group Information:</div>

    <div class="form-group">
        <label asp-for="GroupName">Group Name:</label>
        <input asp-for="GroupName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GroupSize">Group Size (Max 15):</label>
        <input asp-for="GroupSize" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber:</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div>
        <input class="btn btn-primary" type="submit" value="Make Purchase" />
    </div>
</form>